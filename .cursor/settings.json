{
  // ESLint Flat Config Support
  "eslint.experimental.useFlatConfig": true,
  
  // Validate các file types
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  
  // Chỉ định config file
  "eslint.options": {
    "overrideConfigFile": "eslint.config.mjs"
  },
  
  // Working directories
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  
  // Tăng giới hạn hiển thị lỗi (mặc định thường là 100)
  "eslint.maxWarnings": 1000,
  "eslint.maxErrors": 1000,
  
  // Bật type-aware linting trong IDE (nếu hỗ trợ)
  "eslint.experimental.useTypeScriptParser": true,
  
  // Code actions on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  
  // Format on save
  "editor.formatOnSave": true,
  
  // TypeScript settings
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true
}

